{
  "name": "@naszos/utils",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/Tismas/naszos-utils.git"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/main.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/main.cjs"
      }
    }
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "vite",
    "build": "rm -rf ./build && tsc && vite build && dts-bundle-generator --config ./dts-bundle-generator.config.ts && cp ./package.json build && cp ./README.md build",
    "gen:docs": "typedoc && concat-md --decrease-title-levels --dir-name-as-title  docs > README.md",
    "preview": "vite preview"
  },
  "devDependencies": {
    "concat-md": "^0.5.1",
    "dts-bundle-generator": "^9.5.1",
    "typedoc": "^0.26.11",
    "typedoc-plugin-markdown": "^4.2.10",
    "typescript": "~5.6.2",
    "vite": "^5.4.10",
    "vitest": "^2.1.5"
  }
}
